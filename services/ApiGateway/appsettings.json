{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "queue-route": {
        "ClusterId": "queue-cluster",
        "Match": {
          "Path": "/api/queue/{**catch-all}"
        }
      },
      "booking-route": {
        "ClusterId": "booking-cluster",
        "Match": {
          "Path": "/api/bookings/{**catch-all}"
        }
      },
      "admin-route": {
        "ClusterId": "booking-cluster",
        "Match": {
          "Path": "/api/admin/{**catch-all}"
        }
      },
      "auth-route": {
        "ClusterId": "booking-cluster", 
        "Match": {
          "Path": "/api/Auth/{**catch-all}"
        }
      }
    },
    
    "Clusters": {
      "queue-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://virtual-queue:3000"
          }
        }
      },
      "booking-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://booking-service:5000"
          }
        }
      }
    }
  
}
}